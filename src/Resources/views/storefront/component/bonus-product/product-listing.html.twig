{% block bonus_element_product_listing_wrapper %}

    {% if (searchResult) %}
        <div class="cms-element-sidebar-filter">
            <div id="filter-panel-wrapper"
                 class="filter-panel-wrapper"
                 data-offcanvas-filter-content="true">
                {% sw_include '@Storefront/storefront/component/listing/filter-panel.html.twig' with {
                    listing: searchResult,
                    sidebar: false
                } %}
            </div>
        </div>
        <div>
            <div class="cms-block  pos-2 cms-block-product-listing">
                <div class="cms-block-container">
                    <div class="cms-block-container-row row cms-row">
                        <div class="col-12" id="bonus-system-page-products">
                            {#filterUrl: url('widgets.search.filter'),  For SW ^6.3.4.1#}
                            {% sw_include '@Storefront/storefront/component/product/listing.html.twig' with {
                                searchResult: searchResult,
                                dataUrl: seoUrl('frontend.CustomBonusSystem.listing'),
                                filterUrl: seoUrl('frontend.CustomBonusSystem.listing'),
                                params: { search: '' },
                                sidebar: 0,
                                boxLayout: 'minimal',
                                displayMode: '',
                                listingColumns: 'col-sm-6 col-lg-4 col-xl-3'
                            } %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

    {% endif %}

{% endblock %}
