{% block sw_condition_value_content %}
    <div class="sw-condition-point-count sw-condition__condition-value">
        {% block sw_condition_point_count_field_operator %}
            <sw-condition-operator-select
                    v-bind="{ operators, condition }"
                    :disabled="disabled"
            />
        {% endblock %}

        {% block sw_condition_point_count_field_count %}
            <sw-number-field
                    v-model="count"
                    size="medium"
                    number-type="int"
                    :step="1"
                    :disabled="disabled"
            />
        {% endblock %}
    </div>
{% endblock %}